{
  "tests": [
    {
      "name": "Register with red pill",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "test@matrix.com",
        "pillChoice": "red"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "pill_choice": "red"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register without pill choice",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "nopill@test.com"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register with invalid email",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "invalid-email",
        "pillChoice": "blue"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
